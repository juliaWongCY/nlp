{% extends "basic.jinja2" %}

{% block title %}
  Analytics
{% endblock title %}

{% block content %}
  <div class="container-fluid">

    {# Headings #}
    <div class="row">
      <div class="col-md-12">
        <h2 class="text-center">Confusion Matrix</h2>
      </div>
    </div>

  {# Techniques Employed (List of rows) #}
  {% for t in techniques %}
    <div class="row">
      <div class="col-md-3">
      </div>
      <div class="col-md-6">
        <div class="card">
          <h4 class="card-header">
            {{ results[t].name }}
          </h4>
          <div class="card-body">
            <table class="table table-sm table-bordered text-center">
              <thead>
              <tr>
                <th scope="col">Actual \ Predicted</th>
                {% for label in results[t].labels %}
                  <th scope="col">{{ label }}</th>
                {% endfor %}
              </tr>
              </thead>
              <tbody>
              {% for row in results[t].matrix %}
                <tr>
                  <th scope="row">{{ results[t].labels[loop.index0] }}</th>
                  {% for p in row %}
                    <td>{{ p }}</td>
                  {% endfor %}
                </tr>
              {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="col-md-3">
      </div>
    </div>
  {% endfor %}

  </div>
{% endblock content %}
